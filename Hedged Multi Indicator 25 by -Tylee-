//Vortex
VMP = math.sum(math.abs(high - low[1]), vortexLength)
VMM = math.sum(math.abs(low - high[1]), vortexLength)
STR = math.sum(ta.atr(1), vortexLength)
VIP = VMP / STR
VIM = VMM / STR

//DMI
